{
    "name": "haeckel/basic-decimal-arithmetic",
    "description": "Simple interface for doing basic arithmetic with decimal numbers with arbitrary precision",
    "type": "library",
    "require-dev": {
        "phpmd/phpmd": "@stable",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Haeckel\\BasicDecimalArithmetic\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Dominik HÃ¤ckel"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "haeckel/type_wrapper": "^2.0"
    },
    "scripts": {
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit"
        ],
        "dbg-test": [
            "@putenv XDEBUG_MODE=coverage,debug",
            "@putenv XDEBUG_SESSION=1",
            "vendor/bin/phpunit"
        ],
         "testSilent": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --no-output 2> /dev/null"
        ],
        "phpstan": [
            "vendor/bin/phpstan"
        ],
        "cs": [
            "vendor/bin/phpcs src/"
        ],
        "cbf": [
            "vendor/bin/phpcbf src/"
        ],
        "phpmd": [
            "vendor/bin/phpmd src/ github phpmd.xml"
        ],
        "phpmd-local": [
            "vendor/bin/phpmd src/ text phpmd.xml --cache"
        ],
        "ci": [
            "@cbf -q",
            "@cs -q",
            "@phpmd",
            "@phpstan -q",
            "@test --no-output"
        ],
        "local-ci": [
            "@cbf",
            "@cs",
            "@phpmd-local",
            "@phpstan --no-progress",
            "@local-test"
        ],
        "local-test": [
            "@test --coverage-html .phpunit/html-coverage"
        ]
    },
    "archive": {
        "exclude": [
            "test/",
            "phpcs.xml.dist",
            "phpstan.dist.neon",
            "phpunit.xml",
            ".gitignore",
            ".githooks",
            ".github"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
